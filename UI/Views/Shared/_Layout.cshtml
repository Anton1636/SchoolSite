<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Best School Ever", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav">
                <li><a href="#"></a>@Html.ActionLink("Career", "Index", "Career")</li>
                <li role="presentation"><a href="#"></a>@Html.ActionLink("Gallary", "Index", "Gallary")</li>
                <li role="presentation"><a href="#"></a>@Html.ActionLink("News", "Index", "News")</li>
                <li role="presentation"><a href="#"></a>@Html.ActionLink("Schedule", "Index", "Schedule")</li>
                <li role="presentation"><a href="#"></a>@Html.ActionLink("SchoolParty", "Index", "SchoolParty")</li>
                <li role="presentation"><a href="#"></a>@Html.ActionLink("Teachers", "Index", "Teachers")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
</nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
